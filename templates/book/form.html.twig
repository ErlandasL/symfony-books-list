{% extends 'base.html.twig' %}

{% block title %}Add/Edit Book{% endblock %}

{% block body %}
    <h1>{{ form.vars.value.id ? 'Edit' : 'Add' }} Book</h1>
    {{ form_start(form) }}
    {{ form_row(form.title) }}
    {{ form_row(form.author) }}
    {{ form_row(form.publicationYear) }}
    {{ form_row(form.isbn) }}
    <button class="btn">{{ form.vars.value.id ? 'Save Changes' : 'Add Book' }}</button>
    {{ form_end(form) }}
{% endblock %}
