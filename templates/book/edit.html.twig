{% extends 'base.html.twig' %}

{% block title %}Edit Book{% endblock %}

{% block body %}
    <h1>Edit Book</h1>

    {% for message in app.flashes('success') %}
        <div class="flash-message success">{{ message }}</div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="flash-message error">{{ message }}</div>
    {% endfor %}

    <div class="card">
        <div class="card-body">
            {{ form_start(form) }}
            <div class="mb-3">
                {{ form_label(form.title) }}
                {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.title) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.author) }}
                {{ form_widget(form.author, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.author) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.publicationYear) }}
                {{ form_widget(form.publicationYear, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.publicationYear) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.isbn) }}
                {{ form_widget(form.isbn, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.isbn) }}
            </div>
            <div class="mb-3">
                {{ form_widget(form.save, {'attr': {'class': 'btn btn-custom'}}) }}
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
